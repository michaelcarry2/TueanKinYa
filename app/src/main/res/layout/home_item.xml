<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_time"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/morning_table_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="08:00 AM"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit_regular"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/day_table_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="08:00 AM"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit_regular"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/morning_table_time"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/evening_table_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="08:00 AM"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit_regular"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/day_table_time"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/night_table_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="08:00 AM"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit_regular"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/evening_table_time"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/before_after_eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ก่อนอาหาร)"
            android:fontFamily="@font/kanit_regular"
            app:layout_constraintLeft_toRightOf="@+id/morning_table_time"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/already_morning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="กินแล้ว"
            android:textStyle="normal"
            android:textColor="@color/green_500"
            android:textSize="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end"
            android:fontFamily="@font/kanit_regular"
            />
        <TextView
            android:id="@+id/already_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="กินแล้ว"
            android:textStyle="normal"
            android:textColor="@color/green_500"
            android:textSize="26dp"
            app:layout_constraintTop_toBottomOf="@+id/already_morning"
            android:gravity="end"
            android:fontFamily="@font/kanit_regular"
            />
        <TextView
            android:id="@+id/already_evening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="กินแล้ว"
            android:textStyle="normal"
            android:textColor="@color/green_500"
            android:textSize="26dp"
            app:layout_constraintTop_toBottomOf="@+id/already_day"
            android:gravity="end"
            android:fontFamily="@font/kanit_regular"
            />
        <TextView
            android:id="@+id/already_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="กินแล้ว"
            android:textStyle="normal"
            android:textColor="@color/green_500"
            android:textSize="26dp"
            app:layout_constraintTop_toBottomOf="@+id/already_evening"
            android:gravity="end"
            android:fontFamily="@font/kanit_regular"
            />

        <TextView
            android:id="@+id/drug_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชื่อยา"
            app:layout_constraintTop_toBottomOf="@+id/night_table_time"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit_regular"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>